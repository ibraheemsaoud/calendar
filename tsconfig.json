{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["./src/components/*"],
      "controls/*": ["./src/controls/*"],
    }
  },
  "exclude":["node_modules"],
}